    <link rel="stylesheet" href="./assets/style/all.css" />
  </head>

  <body class="bg-img">
    <header class="relative pt-4 pb-5 header">
      <!-- header -->
      <nav
        class="container flex items-center justify-between px-6 mx-auto md:justify-center"
      >
        <!-- nav -->
        <div class="relative w-5 h-4 hamburger md:hidden">
          <!-- hamburger -->
          <input
            class="absolute top-0 left-0 w-5 opacity-0 cursor-pointer z-5"
            type="checkbox"
            name=""
            id=""
          />
          <div
            class="flex flex-col justify-between w-full h-15px hamburger-lines z-2"
          >
            <span class="w-full h-0.5 block bg-black line-1"></span>
            <span class="w-full h-0.5 block bg-black line-2"></span>
            <span class="w-full h-0.5 block bg-black line-3"></span>
          </div>
        </div>
        <!-- hamburger end -->
        <div class="ml-8 logo md:m-0">
          <!-- logo -->
          <a href="index.html">
            <img
              id="logo-img"
              class="h-20 md:h-36"
              src="./assets/images/Logo.svg"
              alt="JinAiJia-logo"
            />
          </a>
          <div class="relative hidden md:block -top-20 logo-left">
            <div id="nav-secret" class="absolute hidden opacity-0 md:block">
              <a class="hover:font-bold" href="#secret">本店特色</a>
            </div>
            <div id="nav-safety" class="absolute hidden opacity-0 md:block">
              <a class="hover:font-bold" href="#safety">吃得安心</a>
            </div>
          </div>
          <div class="relative hidden md:block -top-20 logo-right">
            <div id="nav-member" class="absolute hidden opacity-0 md:block">
              <a class="hover:font-bold" href="login.html">會員中心</a>
            </div>
            <div id="nav-about-us" class="absolute hidden opacity-0 md:block">
              <a class="hover:font-bold" href="#about-us">關於我們</a>
            </div>
          </div>
        </div>
        <!-- logo end -->
        <div class="text-center members-icon md:hidden">
          <!-- members -->
          <a
            class="relative block w-20 p-1 pr-3 text-right border border-black border-solid hover:text-red-900 rounded-3xl"
            href="login.html"
            >登入
            <i
              class="absolute text-2xl leading-none -translate-y-1/2 fa-solid fa-circle-user top-1/2 left-1"
            ></i>
          </a>
        </div>
        <!-- members end -->
        <ul class="bg-orange-100 menu-list">
          <!-- menu-list -->
          <li class="menu-item">
            <a class="inline-block px-2 py-4 hover:font-black" href="#secret"
              >本店特色</a
            >
          </li>
          <li class="menu-item">
            <a class="inline-block px-2 py-4 hover:font-black" href="#safety"
              >吃得安心</a
            >
          </li>
          <li class="menu-item">
            <a class="inline-block px-2 py-4 hover:font-black" href="#about-us"
              >關於我們</a
            >
          </li>
        </ul>
        <!-- menu-list end -->
      </nav>
      <!-- nav end -->
    </header>
    <!-- header end -->

    <%- contents %>
    <div
      id="loader-wrapper"
      class="fixed inset-0 z-50 grid bg-white loader-wrapper place-items-center"
    >
      <div class="flex gap-2">
        <div class="w-6 h-6 bg-black rounded-full loader animate-bounce"></div>
        <div
          class="w-6 h-6 bg-black rounded-full loader animate-bounce animation-delay-500"
        ></div>
        <div class="w-6 h-6 bg-black rounded-full loader animate-bounce"></div>
        <div
          class="w-6 h-6 bg-black rounded-full loader animate-bounce animation-delay-500"
        ></div>
      </div>
    </div>
    <!-- pre-loader end -->

    <footer class="pb-5 bg-orange-100 footer pt-9">
      <!-- footer -->
      <div class="container px-6 mx-auto text-center">
        <ul class="inline-flex gap-5 media-icons">
          <!-- media-icons -->
          <li>
            <a
              class="block hover:text-red-900"
              href="https://www.facebook.com/%E9%87%91%E8%89%BE%E7%94%B2%E9%B9%BD%E6%B0%B4%E9%9B%9E%E9%9B%B6%E5%98%B4%E5%B0%8F%E8%88%96-111775491564261"
            >
              <i class="leading-none text-h2-fz fa-brands fa-facebook"></i>
            </a>
          </li>
          <li>
            <a class="block hover:text-red-900" href="#">
              <i class="leading-none text-h2-fz fa-brands fa-line"></i>
            </a>
          </li>
          <li>
            <a
              class="block hover:text-red-900"
              href="https://goo.gl/maps/a8Gsor1i4bBPZNni6"
            >
              <i class="leading-none text-h2-fz fa-brands fa-google-plus"></i>
            </a>
          </li>
        </ul>
        <!-- media-icons end -->
        <div class="mt-3 copyright">
          <!-- copyright -->
          <a
            class="inline-block no-underline hover:underline lg:hidden"
            href="#"
            >@ 2022 (金艾甲).com<br />All Rights Reserved</a
          >
          <a
            class="hidden no-underline lg:inline-block hover:underline"
            href="#"
            >@ 2022 (金艾甲).com | All Rights Reserved</a
          >
          <a class="block no-underline hover:underline" href="#"
            >此網頁無營利目的，僅為練習用途</a
          >
        </div>
        <!-- copyright end -->
      </div>
    </footer>
    <!-- footer end -->

    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="./assets/js/vendors.js"></script>
    <script src="./assets/js/all.js"></script>
  </body>
</html>

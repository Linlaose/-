            <div class="absolute about about-animate">
              <a class="hover:scale-105" href="#about-us">關於我們</a>
            </div>
          </div>
        </div>
        <!-- logo end -->
        <div class="text-center members-icon md:hidden">
          <!-- members -->
          <a class="block hover:text-red-900" href="#">
            <i class="leading-none text-h2-fz fa-solid fa-circle-user"></i>
          </a>
        </div>
        <!-- members end -->
        <ul class="bg-orange-100 menu-list">
          <!-- menu-list -->
          <li class="menu-item">
            <a class="inline-block px-2 py-4 hover:font-black" href="#"
              >本店特色</a
            >
          </li>
          <li class="menu-item">
            <a class="inline-block px-2 py-4 hover:font-black" href="#"
              >吃得安心</a
            >
          </li>
          <li class="menu-item">
            <a class="inline-block px-2 py-4 hover:font-black" href="#"
              >關於我們</a
            >
          </li>
        </ul>
        <!-- menu-list end -->
      </nav>
      <!-- nav end -->
    </header>
    <!-- header end -->

    <%- contents %>

    <footer class="pb-5 bg-orange-100 footer pt-9">
      <!-- footer -->
      <div class="container px-6 mx-auto text-center">
